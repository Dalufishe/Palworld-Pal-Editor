{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "palworld_pal_editor",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--cli",
                "--lang=zh-CN",
                "--debug"
            ]
        },
        {
            "name": "Python: WEB",
            "type": "debugpy",
            "request": "launch",
            "module": "palworld_pal_editor",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--web",
                "--lang=zh-CN",
                "--debug"
            ]
        }
    ]
}
